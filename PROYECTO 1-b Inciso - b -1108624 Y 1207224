def dinos():
        x=200
        y=125
        # Dinosaurio b
        b = turtle.Turtle()
        b.hideturtle()
        b.speed(100)
        b.pensize(8)
        b.penup()
        b.goto(x, y)
        b.pendown()
        b.fillcolor("red")
        b.begin_fill()
        b.right(90)
        b.fd(30)
        b.left(315)
        b.fd(10)
        b.left(135)
        b.backward(20)
        b.right(225)
        b.fd(10)
        b.right(90)
        b.backward(10)
        b.lt(135)
        b.fd(20)
        b.left(135)
        b.backward(10)
        b.right(90)
        b.fd(10)
        b.right(45)
        b.fd(20)
        b.left(315)
        b.fd(10)
        b.right(135)
        b.bk(30)
        b.left(135)
        b.fd(10)
        b.left(270)
        b.fd(50)
        b.left(315)
        b.fd(90)
        b.left(315)
        b.fd(20)
        b.backward(20)
        b.right(270)
        b.fd(30)
        b.right(315)
        b.fd(60)
        b.right(315)
        b.fd(30)
        b.left(45)
        b.fd(80)
        b.right(315)
        b.fd(30)
        b.right(315)
        b.fd(60)
        b.right(315)
        b.fd(30)
        b.right(315)
        b.fd(80)
        b.end_fill()
        b1 = turtle.Turtle()
        b1.hideturtle()
        b1.speed(100)
        b1.pensize(8)
        b1.penup()
        b1.goto(x+120, y-100)
        b1.pendown()
        b1.fillcolor("blue")
        b1.begin_fill()
        b1.right(90)
        b1.fd(30)
        b1.left(315)
        b1.fd(10)
        b1.left(135)
        b1.backward(20)
        b1.right(225)
        b1.fd(10)
        b1.right(90)
        b1.backward(10)
        b1.lt(135)
        b1.fd(20)
        b1.left(135)
        b1.backward(10)
        b1.right(90)
        b1.fd(10)
        b1.right(45)
        b1.fd(20)
        b1.left(315)
        b1.fd(10)
        b1.right(135)
        b1.bk(30)
        b1.left(135)
        b1.fd(10)
        b1.left(270)
        b1.fd(50)
        b1.left(315)
        b1.fd(90)
        b1.left(315)
        b1.fd(20)
        b1.backward(20)
        b1.right(270)
        b1.fd(30)
        b1.right(315)
        b1.fd(60)
        b1.right(315)
        b1.fd(30)
        b1.left(45)
        b1.fd(80)
        b1.right(315)
        b1.fd(30)
        b1.right(315)
        b1.fd(60)
        b1.right(315)
        b1.fd(30)
        b1.right(315)
        b1.fd(80)
        b1.end_fill()
