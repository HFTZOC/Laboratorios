import turtle
turtle.title("El Tesoro escondido - Proyecto de Pensamiento Computacional (Práctica) No. 1")
print("Proyecto de Pensamiento Computacional Laboratorio - José Lemus y Henry Tzoc")
print()
print("BIENVENIDO AL CUENTO 'LA ACEPTACIÓN DE UNO MISMO")
nombre=str(input("¿Cuál es tu nombre?\n"))
print("Bienvenido", nombre)
edad=int(input("¿Cuál es tu edad?\n"))
print("Tu tienes",edad,"años de edad")
color=int(input("Entre estos colores elige tu favorito segun su numero:\n1. Rojo\n2. Azul\n3.Amarillo\n4.Naranja\n5.Rosado\n6.Morado\n"))
if color==1:
      color="Red"
elif color==2:
      color="blue"
elif color==3:
      color="yellow"
elif color==4:
      color="orangered"
elif color==5:
      color="magenta"
elif color==6:
      color="darkviolet"
print("Tu color favorito es", color)
print()
def titulo():
            i=turtle.Turtle()
            i.hideturtle()
            i.penup()
            i.goto(0,325)
            i.pendown() 
            i.write("La Aceptación de Uno Mismo", False, "center",("Comic Sans MS",25))
def dibujoinicial():
            margeni=turtle.Turtle()
            margeni.speed(10)
            margeni.fillcolor("DarkOrange2")
            margeni.begin_fill()
            margeni.hideturtle()
            margeni.pensize(8)
            margeni.penup()
            margeni.goto(-500,300)
            margeni.pendown() 
            for i in range(2):
                margeni.forward(1000)
                margeni.right(90)
                margeni.forward(400)
                margeni.right(90)
            margeni.end_fill()
            margent=turtle.Turtle()
            margent.hideturtle()
            margent.speed(10)
            margent.pensize(4)
            margent.penup()
            margent.goto(-500,-110)
            margent.pendown()
            for i in range(2):
                margent.forward(1000)
                margent.right(90)
                margent.forward(200)
                margent.right(90)
            cielo1=turtle.Turtle()
            cielo1.speed(10)
            cielo1.fillcolor("DarkCyan")
            cielo1.begin_fill()
            cielo1.hideturtle()
            cielo1.pensize(8)
            cielo1.penup()
            cielo1.goto(-500,300)
            cielo1.pendown() 
            for i in range(2):
                cielo1.forward(1000)
                cielo1.right(90)
                cielo1.forward(200)
                cielo1.right(90)
            cielo1.end_fill()
            sol=turtle.Turtle()
            sol.hideturtle()
            sol.speed(100)
            sol.pensize(10)
            sol.penup()
            sol.goto(-500,200)
            sol.pendown()
            sol.fillcolor("yellow")
            sol.begin_fill()
            sol.circle(100,90)
            sol.lt(90)
            sol.fd(100)
            sol.lt(90)
            sol.fd(100)
            sol.end_fill()
