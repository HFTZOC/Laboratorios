turtle.setup(1050,750) #El canva es de -500 a 500 de x y de -325 a 325 de y
while True:
    menu=int(input("Menú del cuento\nIngresa el número de menú que deseas:\n 1. Escribe 1 si quieres ver el cuento completo\n 2. Escribe 2 si deseas ver una secuencia especifica: \n 3. Escribe 3 para Salir\n"))
    if menu==1:
        print("Recuerda presionar enter para seguir de página")
        secuencia1()
        input("Seguir?")
        secuencia2() 
        input("Seguir?")
        secuencia3()
        input("Seguir?")
        secuencia4()
        input("Seguir?")
        secuencia5()
        break
    elif menu==2:
        while True:
            secuencia=int(input("Ingresa el número de secuencia que deseas ver (presiona 0 si deseas regresar):"))
            if secuencia==1:
                secuencia1()
            elif secuencia==2:
                secuencia2() 
            elif secuencia==3:
                secuencia3()
            elif secuencia==4:
                secuencia4()
            elif secuencia==5:
                secuencia5()
            elif secuencia == 0:
                   break
            else:
                print("Elige una secuencia correcta")    
    elif menu==3:
        print("Gracias por ver el cuento 'La belleza interior'. Ten un hermoso día")
        break
    else:
        print("Trata de escribir correctamente la opcion del menu")