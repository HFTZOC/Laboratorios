            A.fd(30)
            A.right(45)
            A.fd(80)
            A.end_fill()
            sonrisa=turtle.Turtle()
            sonrisa.fillcolor("red")
            sonrisa.begin_fill()
            sonrisa.hideturtle()
            sonrisa.pensize(5)
            sonrisa.penup()
            sonrisa.goto(-225,60)
            sonrisa.pendown()
            sonrisa.rt(90)
            sonrisa.circle(10,180)
            sonrisa.lt(90)
            sonrisa.fd(20)
            sonrisa.end_fill()
            t = turtle.Turtle() 
            r = 5
            t.hideturtle()
            t.speed(100)
            t.penup()
            t.goto(-225,80)
            t.pendown()
            t.fillcolor("black")
            t.begin_fill()
            t.circle(r * 2)
            t.end_fill()
            t.fillcolor("white")
            t.begin_fill()
            t.circle(r * 1)
            t.end_fill()
            t.penup()
            t.goto(-175,80)
            t.pendown()
            t.fillcolor("black")
            t.begin_fill()
            t.circle(r * 2)
            t.end_fill()
            t.fillcolor("white")
            t.begin_fill()
            t.circle(r * 1)
            t.end_fill()
def roca():
            roca=turtle.Turtle()
            roca.speed(10)
            roca.hideturtle()
            roca.pensize(8)
            roca.penup()
            roca.goto(-250,80)
            roca.pendown()
            roca.fillcolor("DarkGrey")
            roca.begin_fill()
            roca.lt(180)
            roca.fd(80)
            roca.rt(90)
            roca.fd(40)
            roca.rt(45)
            roca.fd(20)
            roca.rt(45)
            roca.fd(60)
            roca.rt(45)
            roca.fd(20)
            roca.rt(45)
            roca.fd(40)
            roca.right(90)
            roca.fd(80)
            roca.end_fill()  
def cactus():
            cactus=turtle.Turtle()
            cactus.hideturtle()
            cactus.speed(10)
            cactus.pensize(8)
            cactus.penup()
            cactus.goto(350,30)
            cactus.pendown()
            cactus.fillcolor("DarkGreen")
            cactus.begin_fill()
            cactus.fd(60)
            cactus.left(90)
            cactus.fd(80)
            cactus.right(90)
            cactus.fd(40)
            cactus.lt(90)
            cactus.fd(40)
            cactus.lt(90)
            cactus.fd(20)
            cactus.lt(90)
            cactus.fd(20)
            cactus.rt(90)
            cactus.fd(20)
            cactus.rt(90)
            cactus.fd(50)
            cactus.lt(90)
            cactus.fd(60)
            cactus.lt(90)
            cactus.fd(150)
            cactus.end_fill()
def arcoiris():
        c = turtle.Screen()
        pen = turtle.Turtle()
        col = ['violet', 'indigo', 'blue',
       'green', 'yellow', 'orange', 'red']
        def semi_circle(col, rad, val):
                pen.up()
                pen.setpos(val+150,100)
                pen.down()
                pen.color(col)
                pen.circle(rad, -180)
                pen.up()
                pen.setpos(val+150, 100)
                pen.down()
                pen.right(180)
        pen.right(90)
        pen.width(10)
        pen.speed(7)
        for i in range(7):
                semi_circle(col[i], 10*(
                i + 8), -10*(i + 1))
        turtle.hideturtle()
def arbol():
    a=turtle.Turtle()
    a.hideturtle()
    a.pensize(4)
    a.fillcolor("IndianRed4")
    a.begin_fill()
    a.up()
    a.goto(250,100)
    a.down()
    a.fd(30)
    a.lt(90)
    a.fd(80)
    a.rt(180)
    a.lt(90)
    a.fd(30)
    a.lt(90)
    a.fd(100)
    a.lt(90)
    a.fd(90)
    a.lt(90)
    a.fd(100)
    a.lt(90)
    a.fd(30)
    a.rt(90)
    a.fd(80)
    a.end_fill()
def estrella():
    turtle.hideturtle()
    turtle.pensize(8)
    turtle.speed(10)
    turtle.penup()
    turtle.goto(-375,150)  # Coordenadas para dibujar a la derecha
    turtle.pendown()
    turtle.fillcolor("yellow")
    turtle.begin_fill()
    for i in range(5):
        turtle.forward(350)
        turtle.right(144)
    turtle.end_fill()
