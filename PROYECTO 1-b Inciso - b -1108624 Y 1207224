def textopanel1():
    turtle.clear()
    turtle.hideturtle()
    turtle.speed(10)
    turtle.penup()
    turtle.goto(0,-250)
    turtle.pendown()
    turtle.write(f"Había una vez un pequeño dinosaurio llamado {nombre} de {edad} años de edad,\nque vivia solo en un vasto y árido desierto.\n{nombre} se sentia muy solo, ya que era el unico dinosaurio con un cuerno...", False, "center", ("comic sans", 20))
def dino():
            A=turtle.Turtle()
            A.hideturtle()
            A.pensize(8)
            A.speed(100)
            A.penup()
            A.goto(0,30)
            A.pendown()
            A.fillcolor(color)
            A.begin_fill()
            A.right(90)
            A.fd(60)
            A.left(45)
            A.fd(20)
            A.left(-135)
            A.backward(40)
            A.right(135)
            A.fd(20)
            A.right(270)
            A.backward(20)
            A.left(225)
            A.fd(40)
            A.left(-135)
            A.backward(20)
            A.right(270)
            A.fd(20)
            A.right(135)
            A.backward(40)
            A.left(-135)
            A.fd(20)
            A.right(45)
            A.fd(60)
            A.left(45)
            A.fd(20)
            A.left(90)
            A.fd(100)
            A.left(45)
            A.fd(180)
            A.left(45)
            A.fd(40)
            A.backward(40)
            A.right(-270)
            A.fd(60)
            A.right(45)
            A.fd(120)
            A.right(45)
            A.fd(60)
            A.left(315)
            A.fd(60)
            A.left(45)
            A.fd(30)
            A.left(270)
            A.fd(30)
            A.left(45)
            A.fd(60)
            A.right(45)
            A.fd(60)
            A.right(45)
            A.fd(120)
            A.right(45)
            A.fd(60)
            A.right(45)
            A.fd(160)
            A.end_fill()
            sonrisa=turtle.Turtle()
            sonrisa.fillcolor("red")
            sonrisa.begin_fill()
            sonrisa.hideturtle()
            sonrisa.pensize(5)
            sonrisa.penup()
            sonrisa.goto(125,100)
            sonrisa.pendown()
            sonrisa.lt(90)
            sonrisa.circle(20,180)
            sonrisa.lt(90)
            sonrisa.fd(40)
            sonrisa.end_fill()
            t = turtle.Turtle() 
            r = 10
            n = 2
            t.penup()
            t.goto(50,125)
            t.pendown()
            t.hideturtle()
            t.fillcolor("black")
            t.begin_fill()
            t.circle(r * 2)
            t.end_fill()
            t.fillcolor("white")
            t.begin_fill()
            t.circle(r * 1)
            t.end_fill()
            t.penup()
            t.goto(150,125)
            t.pendown()
            t.fillcolor("black")
            t.begin_fill()
            t.circle(r * 2)
            t.end_fill()
            t.fillcolor("white")
            t.begin_fill()
            t.circle(r * 1)
            t.end_fill()
